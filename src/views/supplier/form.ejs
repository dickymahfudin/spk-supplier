<form id="form" action="<%= action%>" method="POST">
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label>Supplier</label>
        <input type="text" name="name" class="form-control" placeholder="Supplier" required value="<%= location%>" />
      </div>
    </div>
    <div class="col-md-12">
      <div class="form-group">
        <label>Alamat</label>
        <input type="text" name="alamat" class="form-control" placeholder="Alamat" required value="<%= alamat%>" />
      </div>
    </div>
    <div class="col-md-12">
      <div class="form-group">
        <label>Contact</label>
        <input type="text" name="contact" class="form-control" placeholder="Contact" required value="<%= contact%>" />
      </div>
    </div>

    <% forms.forEach( (form, i) => { const value = form.value || "" %>
    <div class="col-md-12">
      <div class="form-group">
        <label><%= form.name %></label>
        <input
          type="number"
          step="0.01"
          min="0"
          name="<%= form.id %>"
          class="form-control"
          placeholder="<%= form.name %>"
          value="<%= value%>"
          required
        />
      </div>
    </div>
    <% }) %>
    <div class="col-md-12">
      <button type="submit" class="btn btn-primary col-md-12">Simpan Data</button>
    </div>
  </div>
</form>
